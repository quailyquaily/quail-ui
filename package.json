{
  "name": "quail-ui",
  "version": "0.7.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "license": "AGPL-3.0",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./style.css": "./dist/style.css",
    "./dist/": {
      "import": "./dist/",
      "require": "./dist/"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build --mode lib",
    "build:demo": "vue-tsc && vite build --mode demo",
    "preview": "vite preview"
  },
  "dependencies": {
    "qrcode": "^1.5.4",
    "quail-js": "^0.3.18",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/qrcode": "^1.5.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "rollup-plugin-scss": "^4.0.0",
    "sass": "^1.83.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vue-tsc": "^2.2.0"
  }
}
